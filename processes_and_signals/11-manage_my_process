#!/usr/bin/env bash
# Manage the manage_my_process daemon

PIDFILE="/var/run/my_process.pid"

case "$1" in
    start)
        ./manage_my_process &
        echo $! > "$PIDFILE"
        echo "manage_my_process started"
        ;;
        
    stop)
        if [ -f "$PIDFILE" ]; then
            kill -9 "$(cat "$PIDFILE")"
            rm -f "$PIDFILE"
        fi
        echo "manage_my_process stopped"
        ;;
        
    restart)
        if [ -f "$PIDFILE" ]; then
            kill -9 "$(cat "$PIDFILE")"
            rm -f "$PIDFILE"
        fi
        ./manage_my_process &
        echo $! > "$PIDFILE"
        echo "manage_my_process restarted"
        ;;
        
    *)
        echo "Usage: 11-manage_my_process {start|stop|restart}"
        ;;
esac

